#
# inv-mpu6509 drivers for Invensense MPU devices and combos
#

config INV_MPU6509_IIO
	tristate
	select IIO_BUFFER
	select IIO_TRIGGERED_BUFFER

config INV_MPU6509_I2C
	tristate "Invensense MPU6509 devices (I2C)"
	depends on I2C_MUX
	select INV_MPU6509_IIO
	select REGMAP_I2C
	help
	  This driver supports the Invensense MPU6509
	  motion tracking devices over I2C.
	  This driver can be built as a module. The module will be called
	  inv-mpu6509-i2c.

config INV_MPU6509_SPI
	tristate "Invensense MPU6509 devices (SPI)"
	depends on SPI_MASTER
	select INV_MPU6509_IIO
	select REGMAP_SPI
	help
	  This driver supports the Invensense MPU6509
	  motion tracking devices over SPI.
	  This driver can be built as a module. The module will be called
	  inv-mpu6509-spi.

config INV_MPU6509_TRIGGER
	bool "MPU6509 use sysfs trigger"
	default n
	help
	  Say Y here if you want to use sysfs trigger for MPU6509
	  When in doubt, say "N".