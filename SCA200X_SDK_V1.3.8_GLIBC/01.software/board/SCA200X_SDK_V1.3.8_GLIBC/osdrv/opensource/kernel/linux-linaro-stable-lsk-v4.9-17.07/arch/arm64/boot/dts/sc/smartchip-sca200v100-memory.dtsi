		rcu_reserved: rcu@0x22400000 {
			reg = <0 0x22400000 0 0x2000000>;
		};

		// 4M
		system_heap_reserved: system_heap@0x24400000 {
			compatible="ion-region";
			reg = <0 0x24400000 0 0x400000>;
		};
#endif

	};

#if 0
