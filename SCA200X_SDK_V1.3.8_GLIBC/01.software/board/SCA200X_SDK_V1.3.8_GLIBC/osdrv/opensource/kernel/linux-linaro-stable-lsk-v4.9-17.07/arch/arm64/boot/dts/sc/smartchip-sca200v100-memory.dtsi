/ {
	reserved_memory: reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		// 2M
		icc_reserved: icc@0x22200000 {
			compatible="icc-region";
			reg = <0 0x22200000 0 0x200000>;
		};

		// 32M
		rtos_reserved: rtos@0x22400000 {
			reg = <0 0x22400000 0 0x2000000>;
		};

#if 0
