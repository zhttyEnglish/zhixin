if ARCH_SMARTCHIP

config SMARTCHIP_SCA200V100
	bool "Support SmartChip SCA200V100"
	select ARM64
	select SUPPORT_SPL
	imply SPL_SEPARATE_BSS
	select SPL_SERIAL_SUPPORT if SPL
	select DEBUG_UART_BOARD_INIT
	help
	  The SmartChip SCA200V100 is a ARM-based SoC with a quad-core Cortex-A53
	  including NEON several DDR4 options
	  and video codec support. Peripherals include Gigabit Ethernet,
	  USB2 host and OTG, SDIO, I2S, UART, SPI, I2C and PWMs.

config SMARTCHIP_SCA200V200
	bool "Support SmartChip SCA200V200"
	select ARM64
	select SUPPORT_SPL
	imply SPL_SEPARATE_BSS
	select SPL_SERIAL_SUPPORT if SPL
	select DEBUG_UART_BOARD_INIT
	help
	  The SmartChip SCA200V200 is a ARM-based SoC with a dual-core Cortex-A53
	  including NEON several DDR4 options
	  and video codec support. Peripherals include Gigabit Ethernet,
	  USB2 host and OTG, SDIO, I2S, UART, SPI, I2C and PWMs.

config SYS_VENDOR
	default "smartchip"

source arch/arm/mach-smartchip/sca200v100/Kconfig
source arch/arm/mach-smartchip/sca200v200/Kconfig

endif
